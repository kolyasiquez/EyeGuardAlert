<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eye Detection Alarm" Height="450" Width="800">
    <Grid>
        <!-- Image to display video feed -->
        <Image Name="imageDisplay" HorizontalAlignment="Center" VerticalAlignment="Top" Height="300" />

        <!-- TextBlock for status messages -->
        <TextBlock Name="statusTextBlock" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                   FontSize="16" Foreground="Red" />
    </Grid>
</Window>
